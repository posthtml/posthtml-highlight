{
  "name": "posthtml-highlight",
  "description": "PostHTML Syntax Highlighting Plugin",
  "version": "2.0.0",
  "license": "WTFPL",
  "author": "Casey Webb (https://caseyWebb.xyz)",
  "bugs": "https://github.com/posthtml/posthtml-highlight/issues",
  "homepage": "https://github.com/posthtml/posthtml-highlight",
  "repository": "posthtml/posthtml-highlight",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc",
    "format": "pretty-quick",
    "lint": "eslint --ext .ts --ignore-path .gitignore ./",
    "release": "standard-version --sign && git push --follow-tags",
    "test": "jest"
  },
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "syntax",
    "highlight",
    "highlighter",
    "highlighting",
    "code"
  ],
  "main": "dist",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "profiscience",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./test/tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testMatch": [
      "**/test/*.ts"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.[tj]sx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "highlight.js": "^10.0.0"
  },
  "peerDependencies": {
    "posthtml": "^0.16.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/highlight.js": "^10.1.0",
    "@types/jest": "^26.0.0",
    "@types/node": "^15.0.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^7.7.0",
    "eslint-config-profiscience": "^5.0.2",
    "husky": "^6.0.0",
    "jest": "^26.4.0",
    "posthtml": "^0.16.5",
    "prettier": "^2.0.1",
    "pretty-quick": "^3.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  }
}
