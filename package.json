{
  "name": "posthtml-highlight",
  "description": "PostHTML Syntax Highlighting Plugin",
  "version": "3.0.0",
  "license": "WTFPL",
  "author": "Casey Webb (https://caseyWebb.xyz)",
  "bugs": "https://github.com/posthtml/posthtml-highlight/issues",
  "homepage": "https://github.com/posthtml/posthtml-highlight",
  "repository": "posthtml/posthtml-highlight",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc",
    "format": "pretty-quick",
    "lint": "eslint --ext .ts --ignore-path .gitignore ./",
    "release": "standard-version --sign && git push --follow-tags",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "syntax",
    "highlight",
    "highlighter",
    "highlighting",
    "code"
  ],
  "main": "dist",
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": "profiscience",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./test/tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testMatch": [
      "**/test/*.ts"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.[tj]sx?$": "ts-jest"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "highlight.js": "^11.3.1"
  },
  "peerDependencies": {
    "posthtml": "^0.15.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/highlight.js": "^10.1.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^18.14.0",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^8.5.0",
    "eslint-config-profiscience": "^7.0.1",
    "husky": "^7.0.0",
    "jest": "^27.4.5",
    "posthtml": "^0.16.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
