{
  "name": "posthtml-highlight",
  "description": "PostHTML Syntax Highlighting Plugin",
  "version": "1.0.2",
  "license": "WTFPL",
  "author": "Casey Webb (https://caseyWebb.xyz)",
  "bugs": "https://github.com/caseyWebb/posthtml-highlight/issues",
  "homepage": "https://github.com/caseyWebb/posthtml-highlight",
  "repository": "caseyWebb/posthtml-highlight",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "lint": "tslint -p ./tsconfig.json",
    "test": "jest",
    "ci": "yarn build && yarn lint && yarn test",
    "prepack": "yarn ci"
  },
  "dependencies": {
    "highlight.js": "^9.12.0"
  },
  "peerDependencies": {
    "posthtml": "^0.11.0"
  },
  "devDependencies": {
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.6",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "posthtml": "^0.11.4",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "syntax",
    "highlight",
    "highlighter",
    "highlighting",
    "code"
  ],
  "main": "dist",
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "testMatch": [
      "**/test/*.ts"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.[tj]sx?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  }
}
